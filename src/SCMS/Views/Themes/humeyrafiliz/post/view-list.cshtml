@using Microsoft.Extensions.Localization
@using SCMS.Shared.Resources
@using SCMS.Shared
@inject IStringLocalizer<Resource> _localizer

@{
    ListModel listModel = (ListModel)Model;
    string root = Url.Content("~/");
}
<section>
    <div class="w-100 pt-100 pb-110 position-relative">
        <div class="container">
            <div class="news-wrap2 position-relative w-100">
                <div class="row mrg30">
                    @if (listModel.Posts.Count() > 0)
                    {
                        @foreach (var post in listModel.Posts)
                        {

                            <div class="col-md-6 col-sm-6 col-lg-4">
                                <div class="news-box2 brd-rd10 position-relative overflow-hidden w-100">
                                    <div class="news-img2 position-relative overflow-hidden w-100">
                                        <a href="~/posts/@post.Slug" title=""><img class="img-fluid w-100" src="@post.Cover" title="@post.Title"></a>
                                    </div>
                                    <div class="news-info2 brd-rd10 bg-color6 position-relative w-100">
                                        <img class="authr-img z1 img-fluid rounded-circle position-absolute" width="43" height="43" src="/@post.Author.Avatar" alt="@post.Author.DisplayName">
                                        <h3 class="mb-0"><a href="~/posts/@post.Slug" title="">@post.Title</a></h3>
                                        @if (post.Categories != null)
                                        {
                                            <ul class="blog-categories">
                                                @foreach (var cat in post.Categories)
                                                {
                                                    <li> <a href="~/categories/@cat.Content">@cat.Content </a></li>
                                                }
                                            </ul>
                                        }
                                        <ul class="meta mb-0 list-unstyled d-flex flex-wrap w-100">
                                            <li class="scndry-clr"><a title="">@post.Published.ToFriendlyShortDateString()</a></li>
                                            <li>@post.Author.DisplayName</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>


                        }
                    }
                    else
                    {
                        <div class="h1 text-capitalize">@_localizer["empty"]!</div>
                    }
                </div>
            </div>
